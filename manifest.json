{
  "manifest_version": 3,
  "name": "McMaster RateMyProf",
  "version": "1.0",
  "description": "Access RateMyProf ratings directly from McMaster's MyTimetable!",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://mytimetable.mcmaster.ca/criteria.jsp?access=*"],
      "css": ["styles.css"],
      "js": ["content.js", "fontawesome.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["./node_modules/@mtucourses/rate-my-professors/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
